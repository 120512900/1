<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Question 7"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:text="In which condition will you buy a new phone?"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="25dp"
        ></TextView>
    <RadioGroup
        android:id="@+id/q7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">
        <RadioButton
            android:id="@+id/q7_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:checked="false"
            android:text="When the old phone has been used for a year or two.(but it still works)"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:theme="@style/MyCheck"
            ></RadioButton>
        <RadioButton
            android:id="@+id/q7_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:checked="false"
            android:text="When the old phone has been used for more than three years.(but it still works)"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:theme="@style/MyCheck"
            ></RadioButton>
        <RadioButton
            android:id="@+id/q7_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:checked="false"
            android:text="When the old phone breaks down."
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:theme="@style/MyCheck"
            ></RadioButton>
        <RadioButton
            android:id="@+id/q7_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:checked="false"
            android:text="when a new one is released."
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:theme="@style/MyCheck"
            ></RadioButton>
        <RadioButton
            android:id="@+id/q7_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:checked="false"
            android:text="Others"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:theme="@style/MyCheck"
            ></RadioButton>
    </RadioGroup>
    <Button
        android:id="@+id/q7_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:checked="false"
        android:text="NEXT"
        android:textSize="18sp"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:onClick="Click_q7"
        ></Button>

    <!-- END    : Your code should be within this block -->

</RelativeLayout>
